{
  "name": "avr-docs-mcp",
  "version": "1.1.0",
  "author": "Agent Voice Response <info@agentvoiceresponse.com>",
  "description": "MCP server for AVR documentation",
  "main": "dist/index.js",
  "bin": {
    "avr-docs-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "MCP_MODE=http node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:http": "MCP_MODE=http tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "test": "node test-connection.js",
    "test:http": "node test-http-mode.js",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "keywords": [
    "mcp",
    "server",
    "avr",
    "documentation",
    "modelcontextprotocol",
    "wiki.js"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentvoiceresponse/avr-docs-mcp.git"
  },
  "contributors": [
    {
      "name": "Giuseppe Careri",
      "email": "info@gcareri.com",
      "url": "https://github.com/gcareri"
    }
  ]
}
